<h2><%= @list.name %></h2>

<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-success" %>

<div class="movies-container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="movie-card">
      <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
      <h4><%= bookmark.movie.title %> - <%= bookmark.movie.rating %> ‚≠ê</h4>
      <p><%= bookmark.comment %></p>
      <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
