<h2>Add a Movie to <%= @list.name %></h2>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.label :movie_id, "Choose a Movie" %>
    <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: "Select a movie" %>
  </div>

  <div class="form-group">
    <%= f.input :comment, placeholder: "Why do you like this movie?" %>
  </div>

  <%= f.submit "Add Movie", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
